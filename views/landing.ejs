<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css"
    />
    <!-- Personal stylesheet -->
    <link rel="stylesheet" href="/stylesheets/landing.css" />
    <!-- Modernizr -->
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js"
      type="text/javascript"
      async
    ></script>
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <title>Yelpcamp</title>
  </head>
  <body>
    <!-- Flash logic -->
    <div class="container">
      <% if(error && error.length > 0){ %>
      <div class="alert alert-danger" role="alert">
        <%= error %>
      </div>
      <% } %> <% if(success && success.length > 0){ %>
      <div class="alert alert-success" role="alert">
        <%= success %>
      </div>
      <% } %>
    </div>
    <!-- Welcome and button to the campgrounds page -->
    <div id="landing-header">
      <h1 id="welcome">Welcome to YelpCamp!</h1>
      <a href="/campgrounds" class="btn btn-lg btn-success"
        >View All Campgrounds</a
      >
      <div class="form-group">
        <form action="/campgrounds" method="GET" class="form-inline">
          <input
            type="text"
            name="search"
            placeholder="Campground Search..."
            class="form-control"
          />
          <input type="submit" value="Search" class="btn btn-default" />
        </div>
      </form>
    </div>

    <!-- List of sliding background images -->
    <ul class="slideshow">
      <li></li>
      <li></li>
      <li></li>
      <li></li>
      <li></li>
    </ul>
  </body>
</html>
